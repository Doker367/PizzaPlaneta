@page "/empleados"
@using ManyBox.Models.Api

<div class="mb-empleados">
    <div class="mb-actions-bar mb-dark-bar">
        @if (rolActual == "SuperAdmin")
        {
            <button class="mb-btn-dark mb-btn-sm" @onclick='() => Navigation.NavigateTo("/registrar-sucursal")'>Registrar Sucursal</button>
            <button class="mb-btn-dark mb-btn-sm" @onclick='() => Navigation.NavigateTo("/baja-sucursal")'>Dar de baja Sucursal</button>
            <button class="mb-btn-dark mb-btn-sm" @onclick='() => Navigation.NavigateTo("/registrar-empleado")'>Registrar Empleado</button>
            <button class="mb-btn-dark mb-btn-sm" @onclick='() => Navigation.NavigateTo("/baja-empleado")'>Dar de baja Empleado</button>
        }
        @if (rolActual == "Admin")
        {
            <button class="mb-btn-dark mb-btn-sm" @onclick='() => Navigation.NavigateTo("/registrar-empleado")'>Registrar Empleado</button>
            <button class="mb-btn-dark mb-btn-sm" @onclick='() => Navigation.NavigateTo("/baja-empleado")'>Dar de baja Empleado</button>
        }
    </div>

    <div class="mb-search-bar mb-search-bar-sep">
        <div class="buscador-row mb-search-row-sep">
            <input class="form-control" placeholder="Buscar empleado..." @bind="busquedaEmpleado" @oninput="OnBusquedaInput" />
            <button class="btn btn-outline-primary buscador-btn" @onclick="FiltrarEmpleados">Buscar</button>
        </div>
        <div class="mb-search-select-sep">
            <InputSelect class="form-control" @bind-Value="sucursalFiltro" @onchange="FiltrarEmpleados">
                <option value="">Todas las sucursales</option>
                @foreach (var suc in sucursales)
                {
                    <option value="@suc.Nombre">@suc.Nombre</option>
                }
            </InputSelect>
        </div>
    </div>

    <div class="mb-empleados-grid">
        @foreach (var emp in empleadosFiltrados)
        {
            if (!string.IsNullOrEmpty(emp.Username) && emp.NombreRol != "SuperAdmin" && emp.Username != usuarioActual)
            {
                <div class="mb-empleado-card mb-glass-card">
                    <div class="mb-card-header">
                        <div class="mb-empleado-avatar">
                            <span class="mb-avatar-text">@emp.Username.Substring(0, Math.Min(1, emp.Username.Length)).ToUpper()</span>
                        </div>
                        <div class="mb-empleado-info">
                            <div class="mb-empleado-name">@emp.UsuarioNombre @emp.UsuarioApellido</div>
                            <div class="mb-empleado-status mb-status-active">@emp.NombreRol</div>
                            <div class="mb-detail-text">@emp.SucursalNombre</div>
                        </div>
                    </div>
                    <div class="mb-card-footer">
                        <button class="mb-btn-dark mb-btn-sm" @onclick="() => AbrirModalCambioSucursal(emp)">Cambiar Sucursal</button>
                        <button class="mb-btn-dark mb-btn-sm" style="margin-left:8px;" @onclick="() => MostrarInfoEmpleado(emp)">
                            <i class="fa fa-info-circle"></i> Info
                        </button>
                    </div>
                </div>
            }
        }
    </div>
    @if (mostrarBotonMostrarMas)
    {
        <div style="text-align:center;margin-top:1.5rem;">
            <button class="mb-btn-dark mb-btn-sm" @onclick="@(async () => await MostrarMasEmpleados())">Mostrar más</button>
        </div>
    }

    @if (modalVisible && modalTipo == "infoEmpleado" && empleadoDetalleVM != null)
    {
        <div class="modal-overlay">
            <div class="modal-card modal-card-md">
                <div class="modal-title">Información de @empleadoDetalleVM.UsuarioNombre @empleadoDetalleVM.UsuarioApellido</div>
                <div class="modal-form-responsive">
                    <div><b>Usuario:</b> @empleadoDetalleVM.Username</div>
                    <div><b>Rol:</b> @empleadoDetalleVM.NombreRol</div>
                    <div><b>Nombre:</b> @empleadoDetalleVM.EmpleadoNombre @empleadoDetalleVM.EmpleadoApellido</div>
                    <div><b>Correo:</b> @empleadoDetalleVM.Correo</div>
                    <div><b>Teléfono:</b> @empleadoDetalleVM.Telefono</div>
                    <div><b>Fecha de nacimiento:</b> @empleadoDetalleVM.FechaNacimiento?.ToString("yyyy-MM-dd")</div>
                    <div><b>Sucursal:</b> @empleadoDetalleVM.SucursalNombre</div>
                    <div><b>Activo:</b> @(empleadoDetalleVM.Activo ? "Sí" : "No")</div>
                </div>
                <div class="modal-actions modal-actions-center">
                    <button class="mb-btn-dark mb-btn-sm" @onclick="() => AbrirModalActualizarEmpleado(new UsuarioEmpleadoVM {
                        UsuarioId = empleadoDetalleVM.UsuarioId,
                        UsuarioNombre = empleadoDetalleVM.UsuarioNombre,
                        UsuarioApellido = empleadoDetalleVM.UsuarioApellido,
                        Username = empleadoDetalleVM.Username,
                        CorreoConcatenado = empleadoDetalleVM.Correo,
                        NombreRol = empleadoDetalleVM.NombreRol
                    })">
                        <i class="fa fa-edit"></i> Actualizar Información
                    </button>
                    @if (rolActual == "SuperAdmin")
                    {
                        <button class="mb-btn-dark mb-btn-sm" style="margin-left:8px;" @onclick="() => AbrirModalCambiarPassword(new UsuarioEmpleadoVM {
                            UsuarioId = empleadoDetalleVM.UsuarioId,
                            UsuarioNombre = empleadoDetalleVM.UsuarioNombre,
                            UsuarioApellido = empleadoDetalleVM.UsuarioApellido,
                            Username = empleadoDetalleVM.Username,
                            CorreoConcatenado = empleadoDetalleVM.Correo,
                            NombreRol = empleadoDetalleVM.NombreRol
                        })">
                            <i class="fa fa-key"></i> Cambiar Contraseña
                        </button>
                    }
                    <button class="mb-btn-dark mb-btn-sm" style="margin-left:8px;" @onclick="CerrarModal">Cerrar</button>
                </div>
            </div>
        </div>
    }

    @if (modalVisible && modalTipo == "cambiarSucursalEmpleado" && empleadoCambioSucursal != null)
    {
        <div class="modal-overlay">
            <div class="modal-card modal-card-md">
                <div class="modal-title">Cambiar sucursal de @empleadoCambioSucursal.UsuarioNombre @empleadoCambioSucursal.UsuarioApellido</div>
                <div class="modal-form-responsive">
                    <InputSelect class="form-control" @bind-Value="nuevaSucursalEmpleadoId">
                        <option value="">Selecciona nueva sucursal</option>
                        @foreach (var suc in sucursales)
                        {
                            <option value="@suc.Id">@suc.Nombre</option>
                        }
                    </InputSelect>
                </div>
                <div class="modal-actions modal-actions-center">
                    <button class="mb-btn-dark" @onclick="ConfirmarCambioSucursalEmpleado" disabled="@(nuevaSucursalEmpleadoId == null)">Confirmar</button>
                    <button class="btn btn-secondary" @onclick="CerrarModal">Cancelar</button>
                </div>
                @if (!string.IsNullOrEmpty(errorMsg))
                {
                    <div class="alert alert-danger mt-2">@errorMsg</div>
                }
            </div>
        </div>
    }

    @if (modalVisible && modalTipo == "actualizarEmpleado" && empleadoActualizar != null)
    {
        <div class="modal-overlay">
            <div class="modal-card modal-card-md">
                <div class="modal-title">Actualizar información de @empleadoActualizar.UsuarioNombre @empleadoActualizar.UsuarioApellido</div>
                <EditForm Model="@empleadoUpdateModel" OnValidSubmit="ConfirmarActualizarEmpleado">
                    <DataAnnotationsValidator />
                    <div class="modal-form-responsive">
                        <InputText class="form-control" @bind-Value="empleadoUpdateModel.Nombre" placeholder="Nombre" />
                        <InputText class="form-control" @bind-Value="empleadoUpdateModel.Apellido" placeholder="Apellido" />
                        <InputText class="form-control" @bind-Value="empleadoUpdateModel.Email" placeholder="Correo" />
                        <InputText class="form-control" @bind-Value="empleadoUpdateModel.Telefono" placeholder="Teléfono" />
                        <InputDate class="form-control" @bind-Value="empleadoUpdateModel.FechaNacimiento" placeholder="Fecha de nacimiento" />
                    </div>
                    <div class="modal-actions modal-actions-center">
                        <button class="mb-btn-dark" type="submit" disabled="@isUpdatingEmpleado">Actualizar</button>
                        <button class="btn btn-secondary" type="button" @onclick="CerrarModal">Cancelar</button>
                    </div>
                    @if (!string.IsNullOrEmpty(errorMsg))
                    {
                        <div class="alert alert-danger mt-2">@errorMsg</div>
                    }
                </EditForm>
            </div>
        </div>
    }

    @if (modalVisible && modalTipo == "cambiarPasswordEmpleado" && empleadoCambiarPassword != null)
    {
        <div class="modal-overlay">
            <div class="modal-card modal-card-md">
                <div class="modal-title">Cambiar contraseña de @empleadoCambiarPassword.UsuarioNombre @empleadoCambiarPassword.UsuarioApellido</div>
                <EditForm Model="@passwordModel" OnValidSubmit="ConfirmarCambiarPassword">
                    <DataAnnotationsValidator />
                    <div class="modal-form-responsive">
                        <InputText class="form-control" @bind-Value="passwordModel.NewPassword" type="password" placeholder="Nueva contraseña" />
                        <InputText class="form-control" @bind-Value="passwordModel.ConfirmNewPassword" type="password" placeholder="Confirmar nueva contraseña" />
                    </div>
                    <div class="modal-actions modal-actions-center">
                        <button class="mb-btn-dark" type="submit" disabled="@isChangingPassword">Cambiar</button>
                        <button class="btn btn-secondary" type="button" @onclick="CerrarModal">Cancelar</button>
                    </div>
                    @if (!string.IsNullOrEmpty(errorMsg))
                    {
                        <div class="alert alert-danger mt-2">@errorMsg</div>
                    }
                </EditForm>
            </div>
        </div>
    }
</div>
