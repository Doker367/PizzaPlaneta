@page "/sucursales"
@using ManyBox.Models.Api

<div class="sucursales-container">
    <h2>Gestión de Sucursales</h2>
    <div class="dashboard-buttons" style="margin-bottom: 2rem; gap: 1.2rem;">
        <button class="btn btn-success" @onclick="MostrarRegistroSucursal">Registrar Sucursal</button>
    </div>

    <div class="sucursales-buscador" style="margin-bottom: 2rem;">
        <input class="form-control" placeholder="Buscar sucursal..." @bind="busquedaSucursal" @oninput="FiltrarSucursales" />
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Dirección</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var suc in sucursalesFiltradas)
            {
                <tr>
                    <td>@suc.Nombre</td>
                    <td>@suc.Direccion</td>
                    <td>
                        <button class="btn btn-danger btn-sm" @onclick="() => DarDeBajaSucursal(suc.Id)">Dar de baja</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (mostrarRegistroSucursal)
    {
        <EditForm Model="nuevaSucursal" OnValidSubmit="RegistrarSucursalAsync">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <div class="form-group">
                <label>Nombre</label>
                <InputText class="form-control" @bind-Value="nuevaSucursal.Nombre" required />
            </div>
            <div class="form-group mt-2">
                <label>Dirección</label>
                <InputText class="form-control" @bind-Value="nuevaSucursal.Direccion" required />
            </div>
            <button class="btn btn-success mt-3" type="submit">Registrar Sucursal</button>
            <button class="btn btn-secondary mt-3 ms-2" type="button" @onclick="(()=> mostrarRegistroSucursal=false)">Cancelar</button>
        </EditForm>
        @if (!string.IsNullOrEmpty(errorMsg))
        {
            <div class="alert alert-danger mt-2">@errorMsg</div>
        }
    }
</div>

