@page "/baja-empleado"
@using ManyBox.Models.Api

<div class="mb-empleados">
    <div class="mb-actions-bar mb-dark-bar">
        <button class="mb-btn-dark mb-btn-sm" @onclick='NavigateBack'>Volver</button>
    </div>

    <div class="mb-search-bar mb-search-bar-sep">
        <div class="buscador-row mb-search-row-sep">
            <input class="form-control" placeholder="Buscar empleado..." @bind="busquedaEmpleado" @oninput="OnBusquedaInput" />
            <button class="btn btn-outline-primary buscador-btn" @onclick="FiltrarEmpleados">Buscar</button>
        </div>
        <div class="mb-search-select-sep">
            <InputSelect class="form-control" @bind-Value="sucursalFiltro" @onchange="FiltrarEmpleados">
                <option value="">Todas las sucursales</option>
                @foreach (var suc in sucursales)
                {
                    <option value="@suc.Nombre">@suc.Nombre</option>
                }
            </InputSelect>
        </div>
    </div>

    <div class="mb-empleados-grid">
        @foreach (var emp in empleadosFiltrados)
        {
            if (emp.NombreRol != "SuperAdmin")
            {
                <div class="mb-empleado-card">
                    <div class="mb-card-header">
                        <div class="mb-empleado-avatar">
                            <span class="mb-avatar-text">@emp.Username.Substring(0,1).ToUpper()</span>
                        </div>
                        <div class="mb-empleado-info">
                            <div class="mb-empleado-name">@emp.UsuarioNombre @emp.UsuarioApellido</div>
                            <div class="mb-empleado-status mb-status-active">@emp.NombreRol</div>
                            <div class="mb-detail-text">@emp.SucursalNombre</div>
                        </div>
                    </div>
                    <div class="mb-card-footer">
                        <button class="mb-btn-dark mb-btn-sm" @onclick="() => AbrirConfirmacionBaja(emp)">Dar de baja</button>
                    </div>
                </div>
            }
        }
    </div>

    @if (modalVisible && modalTipo == "confirmarBajaEmpleado" && empleadoConfirmacionBaja != null)
    {
        <div class="modal-overlay">
            <div class="modal-card modal-card-md">
                <div class="modal-title">¿Seguro que deseas dar de baja a @empleadoConfirmacionBaja.UsuarioNombre @empleadoConfirmacionBaja.UsuarioApellido?</div>
                <div class="modal-actions modal-actions-center">
                    <button class="mb-btn-dark" @onclick="ConfirmarDarDeBajaEmpleado">Confirmar</button>
                    <button class="btn btn-secondary" @onclick="CerrarModal">Cancelar</button>
                </div>
                @if (!string.IsNullOrEmpty(errorMsg))
                {
                    <div class="alert alert-danger mt-2">@errorMsg</div>
                }
            </div>
        </div>
    }

    @if (!string.IsNullOrEmpty(errorMsg) && (!modalVisible || modalTipo != "confirmarBajaEmpleado"))
    {
        <div class="alert alert-danger mt-2">@errorMsg</div>
    }
</div>
