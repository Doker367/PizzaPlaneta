@page "/eliminar-cliente/{id:int}"

<div class="mb-form-centered">
    <div class="mb-actions-bar">
        <h1>?? Eliminar Cliente</h1>
    </div>
    @if (cliente != null)
    {
        <div class="modal-card modal-card-md">
            <div class="modal-title">¿Estás seguro que deseas eliminar este cliente?</div>
            <div class="modal-form-responsive">
                <div><b>Nombre:</b> @cliente.Nombre</div>
                <div><b>Apellido:</b> @cliente.Apellido</div>
                <div><b>Email:</b> @cliente.Correo</div>
                <div><b>Teléfono:</b> @cliente.Telefono</div>
            </div>
            <div class="modal-actions modal-actions-center">
                <button class="mb-btn-dark mb-btn-sm" @onclick="EliminarClienteAsync" disabled="@isEliminando">
                    @(isEliminando ? "Eliminando..." : "Eliminar")
                </button>
                <button class="mb-btn-dark mb-btn-sm ms-2" @onclick="Volver">Cancelar</button>
            </div>
            @if (!string.IsNullOrEmpty(errorEliminar))
            {
                <div class="alert alert-danger mt-3">@errorEliminar</div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info mt-3">Cargando información del cliente...</div>
    }
</div>
