@page "/registrar-sucursal"
@using ManyBox.Models.Api

<div class="mb-empleados">
    <div class="mb-actions-bar mb-dark-bar">
        <button class="mb-btn-dark mb-btn-sm" @onclick="NavigateBack">Volver</button>
    </div>

    <div class="modal-card modal-card-md" style="margin: 0 auto; max-width: 700px;">
        <div class="modal-title">Registrar nueva sucursal</div>
        <EditForm Model="nuevaSucursal" OnValidSubmit="RegistrarSucursalAsync">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <div class="modal-form-responsive">
                <div class="form-group">
                    <label>Nombre</label>
                    <InputText class="form-control" @bind-Value="nuevaSucursal.Nombre" />
                </div>
                <div class="form-group mt-2">
                    <label>Dirección</label>
                    <InputText class="form-control" @bind-Value="nuevaSucursal.Direccion" />
                    <small class="text-muted">Ej. Calle, número, colonia, ciudad, estado y CP</small>
                </div>
            </div>
            <div class="modal-actions modal-actions-center">
                <button class="mb-btn-dark" type="submit" disabled="@isLoading">Registrar Sucursal</button>
                <button class="btn btn-secondary" type="button" @onclick="NavigateBack">Cancelar</button>
            </div>
            @if (!string.IsNullOrEmpty(errorMsg))
            {
                <div class="alert alert-danger mt-2">@errorMsg</div>
            }
        </EditForm>
    </div>
</div>
