@using ManyBox.Utils
@inject IJSRuntime JS

@code {
    private bool drawerOpen = false;
    private async Task ToggleDrawer(MouseEventArgs e)
    {
        drawerOpen = !drawerOpen;
        await JS.InvokeVoidAsync("eval", $"document.body.style.overflow = '{(drawerOpen ? "hidden" : "auto")}'");
    }
    private async Task OnDrawerBackgroundClick(MouseEventArgs e)
    {
        if (drawerOpen)
        {
            drawerOpen = false;
            await JS.InvokeVoidAsync("eval", "document.body.style.overflow = 'auto'");
        }
    }
}

