@* Message.razor *@
@using Microsoft.AspNetCore.Components

<div class="message-row @(EsMio ? "mine" : "theirs")">
    @if (!EsMio)
    {
        <div class="avatar">@Mensaje.Emisor.Substring(0,1).ToUpper()</div>
    }
    <div class="bubble">
        <div class="bubble-header">
            <span class="chat-emisor">@Mensaje.Emisor</span>
            <span class="chat-fecha">@Mensaje.Fecha.ToShortTimeString()</span>
        </div>
        <div class="chat-texto">@Mensaje.Contenido</div>
    </div>
    @if (EsMio)
    {
        <div class="avatar mine">@Mensaje.Emisor.Substring(0,1).ToUpper()</div>
    }
</div>

@code {
    [Parameter] public dynamic Mensaje { get; set; } = default!;
    [Parameter] public bool EsMio { get; set; }
}
